public class Main {
	public static void main(String[] args) {
		int z=5;
		for(int i=1; i <= z;i++){
			for(int j =i; j<= z;j++){
				System.out.print("  ");
		             	}
			for(int j = 1; j <= i; j++){
			System.out.print("* ");
		            	}
			System.out.println();
		}
		for(int i=z;i >=1;i--){
			for(int j=1; j<= i;j++){
			System.out.print("* ");
			}
			System.out.println(" ");
		}
		System.out.println( );	
				
			
		
	}
}